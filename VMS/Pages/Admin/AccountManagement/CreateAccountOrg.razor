@using VMS.Application.ViewModels;

<div class="my-modal">
    <div class="modal__content">
        <div class=" modal__create @(!isSuccess.HasValue ? "d-block" : "d-none")">
            <div @onclick="CloseModalAsync" class="icon-close">
                <span class="material-icons">
                    close
                </span>
            </div>
            <h3 class="text-center">Tạo tài khoản <span>tổ chức</span></h3>
            <EditForm Model="account" OnValidSubmit="OnValidSubmitAsync">

                <DataAnnotationsValidator />

                <div class="d-flex align-items-center mb-20 ">
                    <p class="form__title form__title--level">Cấp <span>(*)</span>:</p>
                    <div class="position-relative">
                        <input @onclick="ToggLeLevelDropdown" @onfocusout="CloseLevelDropdown" class="popup-btn form-control" value="@account.Course" readonly />
                        <div @onclick:preventDefault class="my-dropdown" style="display: @(isLevelShow ? "block" : "none")">
                            <ul>
                                @foreach (var level in levels)
                                {
                                    <li @onmousedown="() => ChooseLevelValue(level)">@level</li>
                                }
                            </ul>
                        </div>
                        <span class="material-icons-outlined position-absolute popup-btn-icon">
                            expand_more
                        </span>
                    </div>
                </div>
                <div class="d-flex align-items-center mb-20">
                    <p class="form__title form__title--name">Tên tổ chức <span>(*)</span>:</p>
                    <div class="">
                        <InputText @bind-Value="@account.FullName" class="form-control" />
                    </div>
                </div>

                <div class="d-flex align-items-center mb-20">
                    <p class="form__title form__title--email">Email <span>(*)</span>:</p>
                    <div class="">
                        <InputText @bind-Value="@account.Email" class="form-control" />
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <p class="form__title form__title-password">Mật khẩu <span>(*)</span>:</p>
                    <div class="">
                        <InputText @bind-Value="@org.FullName" type="password" name="" class="form-control" />
                    </div>
                </div>
                <div class="from__btn text-center">
                    <button @onclick="CloseModalAsync" class="btn btn-cancel">Hủy</button>
                    <button type="submit" class="btn btn-create">Tạo tài khoản</button>
                </div>

            </EditForm>

        </div>

        <div class="modal__success @(isSuccess.HasValue && isSuccess.Value ? "d-block" : "d-none")">
            <div @onclick="CloseModalAsync" class="icon-close">
                <span class="material-icons">
                    close
                </span>
            </div>
            <div>
                <h3 class="text-center mb-4">Bạn đã <span>tạo tài khoản</span> thành công </h3>
                <div class="text-center">
                    <button @onclick="CloseModalAsync" class="btn btn-cancel">Hủy</button>
                    <a href="@Routes.HomePage" class="btn btn-watchList">Xem danh sách tài khoản</a>
                </div>
            </div>
        </div>

        <div class="modal__success @(isSuccess.HasValue && !isSuccess.Value ? "d-block" : "d-none")">
            <div @onclick="CloseModalAsync" class="icon-close">
                <span class="material-icons">
                    close
                </span>
            </div>
            <div>
                <h3 class="text-center mb-4">Bạn đã <span style="color: red">tạo tài khoản</span> thất bại </h3>
            </div>
        </div>

    </div>
</div>

