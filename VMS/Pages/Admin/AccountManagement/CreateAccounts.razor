@using VMS.Application.ViewModels;

<div class="my-modal">
    <div class="modal__content">
        <div class="modal__create @(!isDeleteSuccess ? " d-block" : "d-none" )">
            <div @onclick="CloseModalAsync" class="icon-close">
                <span class="material-icons">
                    close
                </span>
            </div>
            <h3 class="text-center">Tạo tài khoản <span>quản trị viên</span></h3>
            <p class="modal__step ">Bước 1: Tải về file mẫu </p>
            <button class="btn btn-down d-flex align-items-center">
                <i class="material-icons icon-down me-1 ">
                    vertical_align_bottom
                </i>
                <span>Tải file mẫu</span>
            </button>
            <p class="modal__step ">Bước 2: Điền thông tin sinh viên vào file  </p>
            <p class="modal__step mb-3">Bước 3: Tải lên file .xlsx đã điền  </p>
            <UploadImg DefaultPrompt="Chọn, kéo và thả file tại đây"></UploadImg>

            <div class="from__btn text-center">
                <button @onclick="CloseModalAsync" class="btn btn-cancel">Hủy</button>
                <button @onclick="DeleteSuccessAsync" type="submit" class="btn btn-create">Tạo tài khoản</button>
            </div>

        </div>

        <div class="modal__success @(!isDeleteSuccess ? " d-none" : "d-block" )">
            <div @onclick="CloseModalAsync" class="icon-close">
                <span class="material-icons">
                    close
                </span>
            </div>
            <div>
                <h3 class="text-center mb-4">Bạn đã <span>tạo tài khoản</span> thành công </h3>
                <div class="text-center">
                    <button @onclick="CloseModalAsync" class="btn btn-cancel">Hủy</button>
                    <a href="@Routes.HomePage" class="btn btn-watchList">Xem danh sách tài khoản</a>
                </div>
            </div>
        </div>

    </div>
</div>

@code {
    private bool isDeleteSuccess;

    [CascadingParameter]
    public BlazoredModalInstance Modal { get; set; }

    private CreateOrgProfileViewModel org = new();

    private async Task CloseModalAsync()
    {
        await Modal.CloseAsync();
    }
    private async Task DeleteSuccessAsync()
    {
        isDeleteSuccess = true;
    }


}
